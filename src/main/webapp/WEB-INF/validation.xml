<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>
  <formset>
    <form name="user">
      <field property="lastName" depends="required">
        <arg0 key="user.lastName"/>
      </field>
    </form>
    <form name="course">
      <field property="courseCode" depends="required">
        <arg0 key="course.courseCode"/>
      </field>
    </form>
    <form name="assignment">
      <field property="assignmentTitle" depends="required">
        <arg0 key="assignment.assignmentTitle"/>
      </field>
    </form>
  </formset>
</form-validation>
